{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:railway": {
      "dependsOn": ["^build:railway"],
      "outputs": [
        "./packages/directus-extensions/*/*/*.*js",
        "./packages/directus-extensions/*/*/*.*js.map"
      ]
    },
    "build:local": {
      "dependsOn": ["^build:local"]
    },
    "start": {
      "persistent": true
    },
    "start:railway": {
      "persistent": true
    },
    "start:local": {},
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:dev": {
      "cache": false,
      "persistent": false
    }
  }
}

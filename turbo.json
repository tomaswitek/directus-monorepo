{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:directus": {
      "dependsOn": ["^build:directus"]
    },
    "start:directus": {},
    "start": {
      "persistent": true
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:dev": {
      "cache": false,
      "persistent": false
    }
  }
}

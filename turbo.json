{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:railway": {
      "dependsOn": ["^build:railway"],
      "outputs": ["./packages/direcuts-extensions/*/*/index.js"]
    },
    "build:local": {
      "dependsOn": ["^build:local"]
    },
    "start": {
      "persistent": true
    },
    "start:railway": {},
    "start:local": {},
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:dev": {
      "cache": false,
      "persistent": false
    }
  }
}
